<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.shajikhan.lo.Packages$PlaceholderFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/packages_title_4"
                android:layout_width="264dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.07"
                android:ems="10"
                android:textStyle="bold"
                android:textAppearance="@color/colorPrimary"
                android:textColorHighlight="@color/colorAccent"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="25pt"
                android:text="Lukha" />
            <ImageView
                android:id="@+id/packages_im_4"
                android:layout_width="175dp"
                android:layout_height="198dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/wanderer" />

            <TextView
                android:scrollbars="vertical"
                android:id="@+id/packages_text_4"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3.07"
                android:ems="10"
                android:text="@string/lukha" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
