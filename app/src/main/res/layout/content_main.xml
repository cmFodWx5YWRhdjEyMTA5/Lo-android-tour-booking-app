<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    >

    <android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:context="in.shajikhan.lo.MainActivity"
    android:id="@+id/listview"
    android:gravity="center"
    android:orientation="vertical"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Welcome"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:id="@+id/header_user"
        />

    <ImageButton
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:id="@+id/imageButton2"
        android:layout_width="178dp"
        android:layout_height="101dp"
        app:srcCompat="@drawable/ignite"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="45dp" />

    <TextView android:id="@+id/textView1" android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" android:text="Browse Packages" />

    <ImageButton
        android:background="@android:color/transparent"
        android:layout_marginTop="30dp"
        android:scaleType="fitCenter"
        android:id="@+id/imageButton3"
        android:layout_width="184dp"
        android:layout_height="113dp"
        app:srcCompat="@drawable/rings"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="219dp" />

     <TextView android:id="@+id/textView2" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Browse Accessories" />

    <ImageButton
        android:adjustViewBounds="true"
        android:maxWidth="10dp"
        android:padding="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="-10dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:id="@+id/imageButton5"
        android:layout_width="169dp"
        android:layout_height="131dp"
        app:srcCompat="@drawable/cart_red"
        tools:layout_editor_absoluteY="418dp"
        tools:layout_editor_absoluteX="105dp" />

    <TextView android:id="@+id/textView3" android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" android:text="My Cart" />


</android.support.v7.widget.LinearLayoutCompat>
</android.support.v4.widget.NestedScrollView>